---
import Navbar from "../components/navbar.astro";
import Footer from "../components/footer.astro";
import  SpeedInsights  from "@vercel/speed-insights/astro"
import { ViewTransitions } from "astro:transitions";
import logo from "../images/logo.svg";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Jaskaran Singh</title>
    <link rel="icon" href={logo.src} type="image/svg+xml" />
    <ViewTransitions />
  </head>
  <body
    class="mainbody bg-background dark:bg-darkbg selection:bg-primary selection:text-white overflow-x-hidden"
  >
    <div class="flex flex-col items-center">
      <Navbar />
      <slot />
      <Footer />
    </div>
    <style is:global>
      body {
        box-sizing: border-box;
        padding: 0px;
        margin: 0px;
        scroll-behavior: smooth;
      }
      ::-webkit-scrollbar {
        width: 6px;
      }

      ::-webkit-scrollbar-track {
        margin-block: 5px;
      }

      ::-webkit-scrollbar-thumb {
        background: #2f2c318a;
        border-radius: 40px;
      }

      ::-webkit-scrollbar-thumb:hover {
        background: #1818187b;
      }

      .swiper-pagination-bullet-active {
        background-color: #3b304891 !important;
      }

      .swiper-pagination-bullet {
        scale: 0.8;
      }

      .smooth-scroll {
        scroll-behavior: smooth;
      }

      .markdown{
        @apply space-y-1
      }

      .markdown a {
        @apply text-pink-400 text-opacity-100 hover:underline;
      }

      .markdown ul {
        @apply list-disc list-inside flex flex-col px-0;
      }

      .markdown li {
        @apply m-0 p-0 px-0;
      }

      .markdown ol {
        @apply list-decimal list-inside py-0;
      }
    </style>
  </body>
</html>
