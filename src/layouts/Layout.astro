---
import Navbar from "../components/navbar.astro";
import { ViewTransitions } from "astro:transitions";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Jaskaran Singh</title>

    <link rel="icon" href="../images/logo.svg" type="image/x-icon" />
    <ViewTransitions />
  </head>
  <body
    class="bg-background selection:bg-primary selection:text-white overflow-x-hidden"
  >
    <Navbar />
    <slot />
    <div
      class="space-y-1 w-[95%] md:w-[60%] font-poppins font-extralight antialiased text-text mx-auto pb-10"
    >
      <hr class="border-1 border-text antialiased rounded-xl self-center" />

      <div class="flex justify-between text-xs md:text-base tracking-tight px-2">
        <a href="/contact" class="font-light hover:underline underline-offset-2"
          > Contact me </a
        >
        <p>©️ Jaskaran Singh, 2024</p>
      </div>
    </div>
    <style is:global>
      body {
        box-sizing: border-box;
        padding: 0px;
        margin: 0px;
        scroll-behavior: smooth;
      }
      ::-webkit-scrollbar {
        width: 6px;
      }

      ::-webkit-scrollbar-track {
        margin-block: 5px;
      }

      ::-webkit-scrollbar-thumb {
        background: #2f2c318a;
        border-radius: 40px;
      }

      ::-webkit-scrollbar-thumb:hover {
        background: #1818187b;
      }

      .swiper-pagination-bullet-active {
        background-color: #3b304891 !important;
      }

      .swiper-pagination-bullet {
        scale: 0.8;
      }

      .smooth-scroll {
        scroll-behavior: smooth;
      }

      .markdown a {
        @apply text-amber-700 text-opacity-80 hover:underline;
      }

      .markdown ul {
        /* change list disc color */
        @apply list-disc list-inside flex flex-col space-y-3;
      }

      .markdown li {
        @apply m-0 p-0 text-opacity-80 px-0;
      }

      .markdown ol {
        @apply list-decimal list-inside py-0;
      }
    </style>
  </body>
</html>
